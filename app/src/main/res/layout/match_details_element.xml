<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@color/colorPrimary"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        android:id="@+id/cardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/details_hero"
            android:layout_width="98dp"
            android:layout_height="115dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/a1_vert" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/details_hero"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:divider="@color/palette_white"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/details_item0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/a100_lg" />

            <ImageView
                android:id="@+id/details_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/a104_lg" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/details_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/a108_lg" />

            <ImageView
                android:id="@+id/details_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/a106_lg" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/details_item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/a141_lg" />

            <ImageView
                android:id="@+id/details_item5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/a129_lg" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

        <TextView
            android:id="@+id/details_kills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/details_hero"
            android:layout_alignStart="@+id/details_hero"
            android:layout_below="@+id/details_hero"
            android:layout_marginTop="13dp"
            android:text="TextView"
            android:textColor="@color/palette_yellow" />

        <TextView
            android:id="@+id/details_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/details_hero"
            android:layout_alignStart="@+id/details_hero"
            android:layout_below="@+id/details_kills"
            android:text="TextView"
            android:textColor="@color/palette_lightRed" />

    <TextView
        android:id="@+id/details_assists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_hero"
        android:layout_alignStart="@+id/details_hero"
        android:layout_below="@+id/details_deaths"
        android:text="TextView"
        android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/details_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:layout_below="@+id/tableLayout"
            android:text="Details"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/details_assists"
            android:layout_alignStart="@+id/details_assists"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/details_lasthits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/details_side"
            android:layout_alignStart="@+id/details_side"
            android:layout_below="@+id/details_side"
            android:text="TextView"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/details_denies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/details_lasthits"
            android:layout_alignStart="@+id/details_lasthits"
            android:layout_below="@+id/details_lasthits"
            android:text="TextView"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/details_damage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/details_networth"
            android:layout_alignStart="@+id/details_networth"
            android:layout_below="@+id/details_networth"
            android:text="TextView"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="98dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="12dp"
            android:paddingBottom="5dp"
            android:layout_below="@id/details_info"
            android:id="@+id/view" />

        <TextView
            android:id="@+id/details_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_alignBaseline="@+id/details_side"
            android:layout_alignBottom="@+id/details_side"
            android:layout_alignLeft="@+id/tableLayout"
            android:layout_alignStart="@+id/tableLayout" />

        <TextView
            android:id="@+id/details_networth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/details_level"
            android:layout_alignStart="@+id/details_level"
            android:layout_below="@+id/details_level"
            android:text="TextView"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
