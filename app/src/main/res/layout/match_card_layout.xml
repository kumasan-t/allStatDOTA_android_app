<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_card_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:id="@+id/cardView_card"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@animator/lift_on_touch"
        android:clickable="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/imageView_hero"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/a1_vert" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_hero"
                android:layout_toEndOf="@+id/imageView_hero"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_matchID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.07"
                    android:fontFamily="sans-serif"
                    android:paddingTop="7dp"
                    android:text="MatchID"
                    android:paddingRight="13dp"
                    android:paddingEnd="13dp"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_Result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.07"
                    android:text="RESULT"
                    android:paddingRight="13dp"
                    android:paddingEnd="13dp"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:textColor="@color/palette_yellow"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/textView_Side"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.07"
                    android:paddingLeft="9dp"
                    android:paddingStart="9dp"
                    android:paddingRight="13dp"
                    android:paddingEnd="13dp"
                    android:paddingTop="11dp"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:text="Side:"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/textView_Duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.07"
                    android:paddingLeft="9dp"
                    android:paddingStart="9dp"
                    android:paddingRight="13dp"
                    android:paddingEnd="13dp"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:text="Duration:"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/textView_KDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.07"
                    android:paddingLeft="9dp"
                    android:paddingStart="9dp"
                    android:paddingRight="13dp"
                    android:paddingEnd="13dp"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:text="KDA:"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/textView_GPM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.07"
                    android:paddingLeft="9dp"
                    android:paddingStart="9dp"
                    android:paddingRight="13dp"
                    android:paddingEnd="13dp"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:text="GPM:"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/textView_XPM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.07"
                    android:paddingLeft="9dp"
                    android:paddingStart="9dp"
                    android:paddingRight="13dp"
                    android:paddingEnd="13dp"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:text="XPM:"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>