<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/match_card_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/match_card_cardView_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/match_card_cardView_relativeLayout_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/match_card_cardView_relativeLayout_textView_matchID"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/match_card_cardView_relativeLayout_textView_matchID"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="">

            </TextView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>